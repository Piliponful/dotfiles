[colors]
bg = #00282a36

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 50
dpi = 210
offset-y = 8
background = ${colors.bg}
module-margin = 1
font-0 = FuraCodeNerdFont:size=10
modules-center = date wireless-network backlight volume battery

; it will allow for fullscreen mode without bar being on top of the window
wm-restack = bspwm

[module/date]
type = internal/date
interval = 1.0
label = %time%
time = %H:%M
format = %{F#ffb85b}%{F-} <label>

[module/wireless-network]
type = internal/network
interface = wlan0 
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid% (%upspeed% / %downspeed%)
label-disconnected = %{F#ff8e91}睊%{F-}   %{F#63f9f9f9}Not connected%{F-}

ramp-signal-0 = 
ramp-signal-0-foreground = #ffe9cf
