ramp-signal-3 = 
ramp-signal-3-foreground = #ffcb8d
ramp-signal-4 = 
ramp-signal-4-foreground = #ffb85b

[module/backlight]
type = internal/xbacklight
format = <label>
label = %{F#ffb85b} %{F-}%percentage%%

[module/volume]
