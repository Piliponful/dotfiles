ramp-volume-2 = 墳
ramp-volume-2-foreground = #ffcb8d
ramp-volume-3 = 墳
ramp-volume-3-foreground = #ffb85b

[module/battery]
type = internal/battery

format-charging = <animation-charging> <label-charging>
